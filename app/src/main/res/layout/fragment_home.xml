<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Move text to the top -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello from home"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>

        <!-- Add space to push buttons down -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <!-- Grid Layout for Product & Supplier -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:gravity="center"
            android:padding="16dp">

            <!-- Suppliers Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/btnSuppliers"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_supplier"
                    android:contentDescription="Suppliers"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suppliers"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Products Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/btnProducts"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_product"
                    android:contentDescription="Products"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Products"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </LinearLayout>

        </GridLayout>

    </LinearLayout>
</FrameLayout>
